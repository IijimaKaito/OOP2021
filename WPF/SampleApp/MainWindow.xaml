<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Width="174" Height="96">
            <Button x:Name="okButton" Content="Button"   Width="75" Margin="5" Click="okButton_Click"/>
            <Button x:Name="cancelButton" Content="Button" Width="75" Margin="5" RenderTransformOrigin="0.5,0.5" Click="cancelButton_Click"/>
        </StackPanel>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="メッセージを入力してください" Width="784"/>
            <TextBox x:Name="messageTextBox" Height="56" TextWrapping="Wrap" Width="224" >
            </TextBox>
        </StackPanel>

    </DockPanel>
</Window>
